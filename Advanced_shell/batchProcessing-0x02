#!/bin/bash

# Explicitly define Pokémon list in lowercase
POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Base API endpoint
BASE_URL="https://pokeapi.co/api/v2/pokemon"

# Loop through each Pokémon
for name in "${POKEMON_LIST[@]}"; do
    echo "Fetching data for $name..."

    # Fetch data and save to a file named after the Pokémon
    curl -s -o "${name}.json" "${BASE_URL}/${name}"

    # Check if curl succeeded
    if [ $? -ne 0 ]; then
        echo "Failed to fetch data for $name" >> errors.txt
    else
        echo "Saved ${name}.json"
    fi

    # Add delay to handle rate limits
    sleep 2
done

