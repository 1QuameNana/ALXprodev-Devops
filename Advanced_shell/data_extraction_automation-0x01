#!/bin/bash

# Check if data.json exists
if [ ! -f data.json ]; then
  echo "Error: data.json not found. Run fetch_pokemon.sh first." >&2
  exit 1
fi

# Extract data using jq
name=$(jq -r '.name' data.json)
height_dm=$(jq -r '.height' data.json)
weight_hg=$(jq -r '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json)

# Convert height from decimeters to meters, weight from hectograms to kilograms
# Weâ€™ll use awk for decimal division
height_m=$(awk "BEGIN {printf \"%.1f\", $height_dm / 10}")
weight_kg=$(awk "BEGIN {printf \"%.0f\", $weight_hg / 10}")

# Capitalize name and type (optional enhancement)
name=$(echo "$name" | sed 's/.*/\u&/')
type=$(echo "$type" | sed 's/.*/\u&/')

# Format and output the result
echo "$name is of type $type, weighs ${weight_kg}kg, and is ${height_m}m tall."

