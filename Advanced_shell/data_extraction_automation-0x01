#!/bin/bash

# Ensure data.json exists
if [ ! -f data.json ]; then
  echo "Error: data.json not found." >&2
  exit 1
fi

# Extract values using jq
name=$(jq -r '.name' data.json)
height_dm=$(jq -r '.height' data.json)
weight_hg=$(jq -r '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json)

# Convert height (dm to m) and weight (hg to kg)
formatted_height=$(awk "BEGIN {printf \"%.1f\", $height_dm / 10}")
formatted_weight=$(awk "BEGIN {printf \"%.0f\", $weight_hg / 10}")

# Capitalize name and type
name=$(echo "$name" | sed 's/.*/\u&/')
type=$(echo "$type" | sed 's/.*/\u&/')

# Final required output
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."

